{
    "name": "create-express-di-ts",
    "version": "1.0.1",
    "description": "CLI to create Express applications with TypeScript and Dependency Injection",
    "main": "dist/cli.js",
    "bin": {
        "create-express-di-ts": "./dist/cli.js"
    },
    "scripts": {
        "build": "tsc -p .",
        "clean": "rimraf dist",
        "copy-templates": "copyfiles -u 1 \"src/templates/**/*\" dist",
        "prebuild": "npm run clean",
        "postbuild": "npm run copy-templates",
        "prepare": "npm run build"
    },
    "keywords": [
        "typescript",
        "express",
        "dependency injection",
        "nodejs",
        "cli",
        "create-app"
    ],
    "author": "Michael Pediglorio",
    "license": "ISC",
    "repository": {
        "type": "git",
        "url": "https://github.com/maykelxyz/express-di-ts"
    },
    "dependencies": {
        "@types/cors": "^2.8.17",
        "@types/express": "^5.0.0",
        "@types/node": "^22.13.5",
        "commander": "^11.1.0",
        "cors": "^2.8.5",
        "dotenv": "^16.4.7",
        "express": "^4.21.2",
        "tsx": "^4.19.3",
        "typescript": "^5.7.3"
    },
    "devDependencies": {
        "copyfiles": "^2.4.1",
        "rimraf": "^6.0.1"
    },
    "files": [
        "dist",
        "src/templates"
    ]
}
